{
  "name": "nodejs-frontend-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:js": "rollup -c ./npm-scripts/rollup.config.js --bundleConfigAsCjs",
    "build:icon": "node ./npm-scripts/compile-icon-font.js",
    "build:ejs": "node ./npm-scripts/compile-ejs.js",
    "build:scss": "node ./npm-scripts/compile-scss.js",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "delete": "node ./npm-scripts/delete.js",
    "serve": "node ./npm-scripts/server.js",
    "start": "node ./npm-scripts/watch.js",
    "lint:html": "js-beautify --config .ejsbrc.json -html \"./src/ejs/**/*.ejs\"",
    "lint:js": "prettier --write \"./src/scripts/**/*.js\"",
    "lint:css": "stylelint --fix \"./src/scss/**/*.scss\"",
    "lint": "run-s lint:*"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{html,ejs}": [
      "htmlhint",
      "js-beautify --config .ejsbrc.json -html"
    ]
  },
  "engines": {
    "node": ">=16.x"
  },
  "browserslist": [
    "> 3% in JP",
    "not IE 11",
    "last 1 versions"
  ],
  "keywords": [],
  "author": "kobataka0505@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.0",
    "browser-sync": "^2.29.1",
    "chokidar": "^3.5.3",
    "clean-css": "^5.3.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "glob": "^9.3.4",
    "html-minifier": "^4.0.0",
    "htmlhint": "^1.1.4",
    "js-beautify": "^1.14.7",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.7",
    "rollup": "^3.20.2",
    "sass": "^1.60.0",
    "stylelint": "^15.4.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-order": "^6.0.3",
    "webfont": "^11.2.26"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
