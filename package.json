    "imagemin": "^8.0.1",
    "imagemin-svgo": "^10.0.1",
    "imagemin-upng": "^4.0.0",
    "js-beautify": "^1.15.1",
    "lint-staged": "^13.3.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
