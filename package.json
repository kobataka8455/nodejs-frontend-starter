{
  "name": "nodejs-frontend-starter",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "build:icon": "tsx ./npm-scripts/compile-icon-font.ts",
    "build:image": "tsx ./npm-scripts/compile-images.ts",
    "build:js": "tsx ./npm-scripts/compile-js.ts",
    "build:ejs": "tsx ./npm-scripts/compile-ejs.ts",
    "build:scss": "tsx ./npm-scripts/compile-scss.ts",
    "build": "cross-env NODE_ENV=production run-s delete build:*",
    "delete": "tsx ./npm-scripts/delete.ts",
    "serve": "tsx ./npm-scripts/server.ts",
    "watch": "tsx ./npm-scripts/watch.ts",
    "start": "cross-env NODE_ENV=development run-s delete build:* && run-p watch serve",
    "reference": "backstop reference --config=backstop.config.cjs",
    "test": "rimraf 'backstop_data/bitmaps_test/' && backstop test --config=backstop.config.cjs",
    "approve": "backstop approve --config=backstop.config.cjs && npm run test",
    "lint:ejs": "cross-env LINT=ejs tsx ./npm-scripts/lint.ts",
    "lint:js": "cross-env LINT=js tsx ./npm-scripts/lint.ts",
    "lint:scss": "cross-env LINT=scss tsx ./npm-scripts/lint.ts",
    "lint": "run-s lint:*",
    "-----": "-----",
    "build-memo": "テストも実行する場合は以下のscriptをbuildに変更する",
    "_build": "cross-env NODE_ENV=production run-s delete build:* test"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{html,ejs}": [
      "htmlhint",
      "js-beautify --config .ejsbrc.json -html"
    ]
  },
  "engines": {
    "node": ">=20.19.2 || >=22.16.0"
  },
  "browserslist": [
    "> 3% in JP",
    "not IE 11",
    "last 1 versions"
  ],
  "keywords": [],
  "author": "kobataka0505@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.7",
    "@types/browser-sync": "^2.29.0",
    "@types/ejs": "^3.1.5",
    "@types/eslint": "^9.6.1",
    "@types/gh-pages": "^6.1.0",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/js-beautify": "^1.14.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.5.2",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "autoprefixer": "^10.4.20",
    "backstopjs": "^6.3.23",
    "browser-sync": "^3.0.4",
    "chokidar": "^3.6.0",
