    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "svg2ttf": "^6.0.3",
    "svgicons2svgfont": "^12.0.0",
    "tslib": "^2.6.3",
    "tsx": "^4.20.6",
    "ttf2eot": "^3.1.0",
    "ttf2woff": "^3.0.0",
    "ttf2woff2": "^5.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
